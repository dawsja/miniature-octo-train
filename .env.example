NODE_ENV=production
HOST=0.0.0.0
PORT=3000

# Admin credentials
# Option 1: Use default credentials and change password on first login via web UI
#   ADMIN_USERNAME=creator
#   ADMIN_PASSWORD=changeme
#
# Option 2: Set custom credentials directly (no quotes needed around values)
#   ADMIN_USERNAME=your-username
#   ADMIN_PASSWORD=your-secure-password-here
ADMIN_USERNAME=creator
ADMIN_PASSWORD=changeme

# File storage
DATA_DIR=/var/lib/download-hub
DATABASE_FILE=downloads.db

# Security + session tuning
SESSION_TTL_DAYS=7
MIN_PASSWORD_LENGTH=12
